@using System.Security.Claims
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" onclick="closeDetaljiGrupeModal()">&times;</button>
            <h4 class="modal-title" id="detaljiGrupeTitle"></h4>
        </div>
        <div class="modal-body">

            <input class="hidden" id="trenutniKorisnik" value="@Context.User.Claims.Where(x => x.Type == ClaimTypes.NameIdentifier).Select(x => x.Value).Single()" />
            <input class="hidden" id="trenutnaGrupa" />
            <div style="text-align: center">
                <button class="btn btn-success" data-toggle="collapse" data-target="#kreirajUplatu">Kreiraj uplatu</button>
            </div>
            <div id="kreirajUplatu" class="collapse row" style="margin-left: 5%;margin-right: 5%">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label>Iznos: </label>
                            <input class="form-control" id="iznosKreirajUplatu" type="number" step="0.01" />
                        </div>
                        <div class="form-group">
                            <label>Članovi: </label>
                            <select class="form-control" id="clanoviKreirajUplatu" multiple></select>
                            <span class="text-danger" id="lozinkaLoginSpan"></span>
                        </div>
                        <div class="form-group">
                            <label>Raspodijeli sa mnom: </label>
                            <input type="checkbox" id="raspodijeliSamnomKreirajUplatu" checked />
                        </div>
                        <div class="form-group">
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-warning" data-toggle="collapse" data-target="#kreirajUplatu">Odustani</button>
                            </div>
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-success" data-toggle="collapse" data-target="#kreirajUplatu" onclick="kreirajUplatu()">Potvrdi</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <hr /> <br />
            <h4>Moji dugovi</h4>
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Nadimak</th>
                        <th>Iznos</th>
                    </tr>
                </thead>
                <tbody id="mojiDugoviTable"></tbody>
            </table>
            <hr /> <br />
            <h4>Dugovanja prema meni</h4>
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Nadimak</th>
                        <th>Iznos</th>
                    </tr>
                </thead>
                <tbody id="dugovanjaPremaMeniTable"></tbody>
            </table>
            <div style="text-align: center">
                <button class="btn btn-success" data-toggle="collapse" data-target="#razrijesiDugove">Razrješi dugove</button>
            </div>
            <div id="razrijesiDugove" class="collapse row" style="margin-left: 5%;margin-right: 5%">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label>Osoba: </label>
                            <select class="dropdown" type="text" id="razrijesiSOsobom" onchange="iznosZaRazrjesavanje()"></select>
                        </div>
                        <div class="form-group">
                            <label>Iznos: </label>
                            <input class="form-control" type="number" step="0.01" id="razrijesiIznos" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-warning" data-toggle="collapse" data-target="#razrijesiDugove">Odustani</button>
                            </div>
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-success" data-toggle="collapse" data-target="#razrijesiDugove" onclick="razrijesiDugove()">Potvrdi</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <hr /> <br />
            <h4>Članovi</h4>
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Nadimank</th>
                        <th>Stanje</th>
                    </tr>
                </thead>
                <tbody id="detaljiGrupeTable"></tbody>
            </table>
            <div style="text-align: center">
                <button class="btn btn-success" data-toggle="collapse" data-target="#dodajClana">Dodaj člana</button>
            </div>
            <div id="dodajClana" class="collapse row" style="margin-left: 5%;margin-right: 5%">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label>Email: </label>
                            <input class="form-control" type="email" id="dodajClanaEmail" />
                        </div>
                        <div class="form-group">
                            <label>Nadimak: </label>
                            <input class="form-control" type="text" id="nickname" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-warning" data-toggle="collapse" data-target="#dodajClana">Odustani</button>
                            </div>
                            <div class="col-md-2" style="float: right">
                                <button class="btn btn-success" data-toggle="collapse" data-target="#dodajClana" onclick="dodajClana()">Potvrdi</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" data-dismiss="modal" onclick="closeDetaljiGrupeModal()">
                Zatvori
            </button>
        </div>
    </div>
</div>